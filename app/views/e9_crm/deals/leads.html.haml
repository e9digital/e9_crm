= title (@index_title || e9_t(:index_title))

= render 'header'

- if sortable_controller?
  = form_tag polymorphic_path([:update_order, resource_class]) do
    %div#records_table
      = render 'table', :resources => collection, :field_map => {}
- else
  %div#records_table
    = render 'table', :resources => collection

= render 'footer'
