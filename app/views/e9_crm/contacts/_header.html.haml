.toolbar
  .toolbar-left
    = form_tag(resource_class, :method => :get, :id => 'contact_search_form') do
      = label_tag 'contact_search_field', t(:search)
      = text_field_tag 'search', nil, :id => 'contact_search_field'
      = submit_tag t(:go), :name => nil
    = submit_tag t(:clear), :name => nil, :id => 'contact_search_clear'
  .toolbar-middle
    = form_tag new_contact_email_path, :method => :get, :id => '#contact_email_form' do
      = select_tag 'etid', email_template_select_options
      = hidden_field_tag 'uids', @user_ids
      = submit_tag e9_t(:send_email_template), :name => nil
    = form_tag new_contact_email_path, :method => :get, :id => '#contact_newsletter_form' do
      = select_tag 'etid', email_template_select_options
      = hidden_field_tag 'uids', @user_ids
      = submit_tag e9_t(:send_email_newsletter), :name => nil
  .toolbar-right
    = crm_new_resource_link(Contact)
    = crm_new_resource_link(Company)
